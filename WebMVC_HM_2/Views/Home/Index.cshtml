
@{
//Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Index</title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Custom", "Home", FormMethod.Post))
        {
            <div class="row">
                <div class="col-1"><label for="Text">Text:</label></div>
                <div class="col-3"><input name="Text" type="Text" value="Hello, World!" class="form-control" /></div>
                <div class="col-8"></div>
            </div>

            <div class="row mt-3">
                <div class="col-1"><p>Color:</p></div>
                <div class="col-1">
                    <input type="radio" id="colorBlack" name="Color" value="black" checked />
                    <label for="colorBlack">Black</label>
                </div>
                <div class="col-1">
                    <input type="radio" id="colorRed" name="Color" value="red" />
                    <label for="colorRed">Red</label>
                </div>
                <div class="col-1">
                    <input type="radio" id="colorGreen" name="Color" value="green" />
                    <label for="colorGreen">Green</label>
                </div>
                <div class="col-8"></div>
            </div>

            <div class="row mt-3">
                <div class="col-1"><label for="SizeTextBox">Size:</label></div>
                <div class="col-3"><input name="Size" id="SizeTextBox" type="text" value="18" class="form-control" /></div>
                <div class="col-8"></div>
            </div>
            <br />
            <div class="row mt-3">
                <div class="col-12">
                    <input type="submit" value="Custom text" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
    
    
    <script>
        var textBox = document.getElementById("SizeTextBox");

        textBox.addEventListener("change", () => {
            var size = parseInt(textBox.value);
            if (size == null || !(size > 0 && size < 35)) {
                alert("Enter correct size!");
            }
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
